mixin card(title, text, imageSrc, color)
  div(class='flex flex-col')
   div(class=`${color} border border-[${color}] rounded-md w-[285px] h-[285px] flex justify-center items-center`)
    img(src=imageSrc class='mt-20')
   div(class="text-center") 
    h2(class="text-[#FFFFFF] text-[26px]") title
    p(class="text-[#8E89C0]") text
