mixin card(day, month, time, title, text)
 li
  div(class='bg-hbeige-2 rounded-md flex flex-col md:flex-row md:justify-start items-center border border-hbeige-2 p-5 rounded-lg gap-[30px] text-center md:text-left')
   div(class='my-auto bg-hblue border border-hblue text-center rounded-full w-[90px] h-[90px] flex flex-col justify-center align-center text-white p-5')
    span(class='text-[38px] -mb-2') #{day}
    span(class='text-[20px]') #{month}
   div(class='flex flex-col my-auto')
    h4(class="text-[26px]") #{title}
    div
     p(class="font-bold text-horange-1") #{time}
     p #{text}
